@using HR_T3.Domain.Entities;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Person> SignInManager
@inject UserManager<Person> UserManager
@model PersonUpdateVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Güncelle</h4>
            <form class="forms-sample" asp-controller="Account" asp-action="Update" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" name="id" value="@Model.Id">
                <div class="form-group">
                    <label asp-for="Address">Adres</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Adress">
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Telefon Numarası</label>
                    <input asp-for="PhoneNumber" class="form-control" type="tel" onkeypress="clsNumOnly(event)" onpaste="return false;" maxlength="11" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo">Fotoğraf</label>
                    <input asp-for="Photo" type="file" class="form-control btn-gradient-primary">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
            
        </div>
    </div>
</div>
<script src="~/assets/js/OnlyNumeric.js"></script>