@model IEnumerable<EmployeeListVM>

@{
    ViewData["Title"] = "Personel Listesi";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Listesi</h4>
            <table class="table table-striped ">
                <thead>
                    <tr>
                        <th> Personel </th>
                        <th> İsim </th>
                        <th> Soyisim </th>
                        <th> Telefon </th>
                        <th> E-posta </th>
                        <th> Aktiflik </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/@item.Photo" alt="image" />
                            </td>
                            <td> @item.Name </td>
                            <td> @item.Surname </td>
                            <td>
                                @string.Format("{0} ({1}) {2} {3} {4}",
                            item.PhoneNumber.Substring(0, 1),
                            item.PhoneNumber.Substring(1, 3),
                            item.PhoneNumber.Substring(3, 3),
                            item.PhoneNumber.Substring(5, 2),
                            item.PhoneNumber.Substring(7, 2))
                            </td>
                            <td> @item.Email </td>
                            <td>
                                @if (@item.IsActive)
                                {
                                    <label class="badge badge-success">Aktif</label>
                                }
                                else
                                {
                                    <label class="badge badge-danger">Pasif</label>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "EditEmployee", new {  id=item.Id }, new{ @class = "btn btn-primary"})
                                @Html.ActionLink("Detaylar", "DetailEmployee", new { id=item.Id }, new{ @class = "btn btn-info"})
                                @Html.ActionLink("Sil", "DeleteEmployee", new { id=item.Id }, new{ @class = "btn btn-danger"})
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>
