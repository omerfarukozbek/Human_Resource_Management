@using HR_T3.Application.Helpers;
@using HR_T3.Domain.Entities;
@model EmployeeDetailVM
@{
    ViewData["Title"] = "Personel Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-body center-block">
    <div class="page-header">
        <h3 class="page-title text-center">
            <span class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-account"></i>
            </span> @ViewData["Title"]
        </h3>
    </div>
    <div class="row gutters-lg">
        <div class="col-md-4"></div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="~/@Model.Photo" alt="@Model.Email" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4>@Model.ToString()</h4>
                            <p class="text-secondary mb-1">@Html.DisplayNameFor(x => x.Title) @Model.Title</p>
                            <p class="text-muted font-size-sm">@Html.DisplayNameFor(x => x.Department) @Model.Department</p>
                            <p class="text-muted font-size-sm">@Html.DisplayNameFor(x => x.Birthday) @Model.Birthday.ToString("D")</p>
                            <p class="text-muted font-size-sm">@Html.DisplayNameFor(x => x.StartDateOfWork) @Model.StartDateOfWork.ToString("D")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row gutters-lg">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x => x.Email)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @Model.Email
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x => x.PhoneNumber)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @string.Format("{0} ({1}) {2} {3} {4}",
                            Model.PhoneNumber.Substring(0, 1),
                            Model.PhoneNumber.Substring(1, 3),
                            Model.PhoneNumber.Substring(3, 3),
                            Model.PhoneNumber.Substring(5, 2),
                            Model.PhoneNumber.Substring(7, 2))
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x => x.Graduation)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @EnumHelper.GetEnumDisplayName(Model.Graduation)
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x => x.Address)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @Model.Address
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x=>x.AnnualPermit)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @Model.AnnualPermit gün
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-lg-3">
                            <h6 class="mb-0">@Html.DisplayNameFor(x=>x.Salary)</h6>
                        </div>
                        <div class="col-lg-9 text-secondary">
                            @Model.Salary TL
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row gutters-lg">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 d-flex justify-content-center">
                            @Html.ActionLink("Listeye Geri Dön","ListEmployee",new { Model.Id }, new { @class="btn btn-gradient-info" })
                        </div>
                        <div class="col-lg-6 d-flex justify-content-center">
                            @Html.ActionLink("Bilgileri Düzenle","EditEmployee",new { Model.Id }, new { @class="btn btn-gradient-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
